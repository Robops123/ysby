
.pop{
	position: fixed;
	left: 0;
	top: 0;
	right: 0;
	bottom: 0;
	z-index: 9999;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.pop .pop-wrapper{
	position: absolute;
	left: 0;
	top: 0;
	right: 0;
	bottom: 0;
	background-color: #696969;
	opacity: 0.8;
}
.pop .pop-container{
	width: 80%;
	position: relative;
	max-height: 500rpx;
	min-height: 200rpx;
	overflow-y: auto;
	margin: 0 auto;
	background-color: #fff;
	border-radius: 20px;
}
.pop .options{
	box-sizing: border-box;
	line-height: 100rpx;
	padding-left: 60rpx;
	height: 100rpx;
	border-bottom: 2px solid #ebebeb;
}
.pop .options:last-child{
	border-bottom: 0;
}

