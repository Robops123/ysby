
page{
	background-color: #f7f7f7;
}
.nav-bar{
	text-align: center;
}
.nav{
	color: #afafaf;
	display: inline-block;
	width: 33%;
	box-sizing: border-box;
}
.nav.active text{
	color: #000000;
	position: relative;
}
.nav.active text::before{
	content: '';
	position: absolute;
	bottom: -10rpx;
	width: 50rpx;
	background-color: #ff7379;
	height: 2px;
	left: 50%;
	margin-left: -25rpx;
}
.box{
	margin-top: 20rpx;
}
.list:nth-of-type(odd){
	margin-right: 2%;
}
.list{
	display: inline-block;
	vertical-align: top;
	border-radius: 10rpx;
	overflow: hidden;
	width: 49%;
	background-color: #fff;
	margin-bottom: 20rpx;
}
.list image{
	width: 100%;
	height: 380rpx;
}
.list .word .ellipsis{
	margin-bottom: 15rpx;
}
.list .word{
	padding: 5rpx 20rpx  20rpx;
}
.sp-item3{
	border-radius: 20rpx;
	background-color: #fff;
}
.sp-item3-top{
	padding: 20rpx 30rpx 0 0;
	margin: 20rpx 0;
}
.sp-item3-top .headface{
	width: 90rpx;
	height: 90rpx;
	border-radius: 50%;
	margin: 0 15rpx;
}
.sp-item3-top-middle image{
	width: 25rpx;
	height: 25rpx;
	vertical-align: middle;
	margin-right: 5rpx;
}
.sp-item3-top-middle text text{
	color: #a9a9a9;
	margin-left: 10rpx;
}
.sp-item3-top>view{
	display: inline-block;
	vertical-align: middle;
}
.enter-button{
	color: #ff8f94;
	border: 2px solid #ff8f94;
	padding: 10rpx 15rpx;
	border-radius: 52rpx;
	float: right;
	margin-top: 19rpx;
}
.sp-item3-bottom>view{
		display: inline-block;
		vertical-align: top;
		width: 33%;
		height: 220rpx;
		position: relative;
		overflow: hidden;
		border-radius: 20rpx;
}
.sp-item3-bottom{
	padding: 0 30rpx;
	/* margin: 0 18upx; */
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding-bottom: 22rpx;
}
.sp-item3-bottom image{
	width: 100%;
	height: 100%;
}
.sp-item3-bottom .price{
		position: absolute;
		left: 0;
		border-radius:0 20rpx 0 20rpx;
		bottom: 0;
		color: white;
		padding: 5rpx 8rpx;
		background-color: #999;
		opacity: 0.8;
}
.all{
		color: #94cbd5;
}
.news{
		margin-bottom: 20rpx;
}
.media-place{
		width: 100%;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-pack: justify;
		-webkit-justify-content: space-between;
		        justify-content: space-between;
}
.media-place>view{
		width: 100%;
}
.img-1 image{
		width: 100%;
		height: 300rpx;
}
.img-2 image{
		width: 49%;
		height: 260rpx;
}
.img-3 image{
		width: 33%;
		height: 220rpx;
}
