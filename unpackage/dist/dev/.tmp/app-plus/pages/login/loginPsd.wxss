
.box{
	background: white;
	padding: 30rpx 40rpx;
	position: absolute;
	bottom: 0;
	right: 0;
	left: 0;
	top: 0;
}
.input-line{
	background: white;
	line-height: 100rpx;
	border-bottom: 1px solid #f6f6f6;
}
.input-line image{
	width: 30rpx;
	height: 15rpx;
	
	margin-top: 40rpx;
}
.input-line input,
.input-line text,
.input-line .uni-list-cell{
	display: inline-block;
	vertical-align: middle;
}
.input-line text,
 .input-line .uni-list-cell{
	width: 30%;
	font-size: 32rpx;
	margin-right: 4%;
}
.input-line input,
{
	width: 55%;
}
.veri{
	height: 60rpx;
	float: right;
	color: black;
	font-size: 28rpx;
	line-height: 60rpx;
	margin-top: 20rpx;
	border: none;
	outline: none;
	border-radius: 80rpx;
	background-color: #f0f0f0;
	padding: 0 30rpx;
}
.veri::after{
	border: none;
}
.btn{
	width: 100%;
	height: 75rpx;
	background: #ff6d7e  !important;
	border-radius: 75rpx;
	text-align: center;
	line-height: 75rpx;
	letter-spacing: 4px;
	color: white;
	font-size: 34rpx;
	margin: 20rpx 0;
}
.f1{
	margin-bottom: 20rpx;
	font-size: 44rpx;
}
.f2{
	margin: 20rpx 0 50rpx;
	font-size: 30rpx;
	color: #ff6b74;
}
.fr{
	
	float: right;
}
.fn{
	font-size: 28rpx;
	margin-bottom: 60rpx;
}
.fn text{
	color: #7a7a7a;
}

