
page{
	background-color: #f3f3f3;
}
.option-box{
	background: white;
	padding-left: 30rpx;
	border-top: 15rpx solid #f3f3f3;
	border-bottom: 15rpx solid #f3f3f3;
}
.option-box .option-item:last-child{
	border: none;
}
.option-item{
	line-height: 90rpx;
	border-bottom: 1px solid #efefef;
}
.f1{
	color: #b5b5b5;
	margin-right: 25rpx;
}
.fr{
	float: right;
}
.btn{
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 75rpx;
	background: white !important;
	text-align: center;
	line-height: 75rpx;
	color: black;
	letter-spacing: 4px;
	font-size: 34rpx;
}

