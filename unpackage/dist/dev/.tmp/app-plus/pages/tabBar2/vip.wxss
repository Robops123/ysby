
.list>view{
	display: inline-block;
	vertical-align: middle;
}
.list{
	padding: 20rpx;
	background-color: #fff;
}
.list image{
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
	margin-right: 20rpx;
}
.list .time{
	margin-top: 25rpx;
}
.list .btn{
	float: right;
	margin-top: 40rpx;
	padding: 4rpx 10rpx;
	border: 1px solid #ff6d7e !important;
	color: #ff6d7e !important;
	text-align: center;
	border-radius: 50rpx;
}

