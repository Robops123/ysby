
.nav-bar{
	text-align: center;
	padding-bottom: 20rpx;
}
.nav{
	color: #afafaf;
	display: inline-block;
	width: 20%;
	box-sizing: border-box;
}
.nav.active text{
	color: #000000;
	position: relative;
}
.nav.active text::before{
	content: '';
	position: absolute;
	bottom: -10rpx;
	width: 50rpx;
	background-color: #ff7379;
	height: 2px;
	left: 50%;
	margin-left: -25rpx;
}
.order{
	text-overflow: ellipsis;
	overflow: hidden;
	white-space: nowrap;
}
.search{
	background-color: #f7f7f8;
}
.select text{
	width: 70%;
}
.select icon,
.select text{
	display: inline-block;
	vertical-align: middle;
}
.search>view{
	background-color: #fff;
		width: 48%;
		padding: 10rpx 0;
		margin:0 1%;
		display: inline-block;
		vertical-align: middle;
}
.payway{
	margin-left: 38rpx;
	border-radius: 24rpx;
	background-color: #ff6d7e;
	padding: 0 10rpx;
	color: white;
}
.bottom-border{
	padding: 20rpx 0;
	border-bottom: 1px solid #f7f7f7;
}
/* .top-line{
	
} */
.top-line .fr{
	margin-top: 20rpx;
}
.top-line>view,
.md-line>view{
	display: inline-block;
	vertical-align: top;
}
.md-line-word{
	width: 560rpx;
}
.limit-text{
	display: inline-block;
	width: 400rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.md-line image{
	height: 90rpx;
	width: 90rpx;
	margin-right: 20rpx;
}
.status-line{
	margin: 10rpx 0;
}
.btn-line{
	text-align: right;
}
.btn{
	display: inline-block;
	font-size: 28rpx;
	padding: 10rpx 20rpx;
	border-radius: 10rpx;
	border: 1px solid #eee !important;
	text-align: center;
	margin-left: 15rpx;
	height: initial;
	line-height: initial;
	background-color: #fff !important;
}
.btn-primary{
	background-color: #2CAEFF !important;
	color: #fff !important;
	border: none !important;
}
.item{
	border-bottom: 20rpx solid #f3f3f3;
}

