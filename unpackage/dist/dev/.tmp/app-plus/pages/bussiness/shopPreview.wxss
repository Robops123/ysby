}
.enter-button{
	color: #ff8f94;
	border: 2px solid #ff8f94;
	padding: 10rpx 15rpx;
	border-radius: 52rpx;
	float: right;
	margin-top: 19rpx;
}
.banner{
	width: 100%;
	height: 320rpx;
}
.nav-bar{
	padding: 25rpx 0;
	text-align: center;
}
.nav{
	color: #afafaf;
	display: inline-block;
	width: 25%;
	box-sizing: border-box;
}
.nav.active text{
	color: #000000;
	position: relative;
}
.nav.active text::before{
	content: '';
	position: absolute;
	bottom: -10rpx;
	width: 50rpx;
	background-color: #ff7379;
	height: 2px;
	left: 50%;
	margin-left: -25rpx;
}
.box{
	margin-top: 20rpx;
}
.list:nth-of-type(odd){
	margin-right: 2%;
}
.list{
	display: inline-block;
	vertical-align: top;
	border-radius: 10rpx;
	overflow: hidden;
	width: 49%;
	background-color: #fff;
	margin-bottom: 20rpx;
}
.list image{
	width: 100%;
	height: 380rpx;
}
.list .word .ellipsis{
	margin-bottom: 15rpx;
}
.list .word{
	padding: 5rpx 20rpx  20rpx;
}

