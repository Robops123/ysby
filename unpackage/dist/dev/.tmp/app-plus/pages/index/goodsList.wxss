
.nav-bar{
	border-top: 20rpx solid #f3f3f3;
	padding: 20rpx 0;
	text-align: center;
}
.nav{
	color: #afafaf;
	display: inline-block;
	width: 25%;
	box-sizing: border-box;
}
.nav.active>text{
	color: #000000;
	position: relative;
}
.nav.active>text::before{
	content: '';
	position: absolute;
	bottom: -10rpx;
	width: 50rpx;
	background-color: #ff7379;
	height: 2px;
	left: 50%;
	margin-left: -25rpx;
}
.content{
	box-sizing: border-box;
	padding: 0 20rpx;
	background-color: #f3f3f3;
}
.box{
	margin-top: 20rpx;
}
.list:nth-of-type(odd){
	margin-right: 2%;
}
.list{
	display: inline-block;
	vertical-align: top;
	border-radius: 10rpx;
	overflow: hidden;
	width: 49%;
	background-color: #fff;
	margin-bottom: 20rpx;
}
.list image{
	width: 100%;
	height: 380rpx;
}
.list .word .ellipsis{
	margin-bottom: 15rpx;
}
.list .word{
	padding: 5rpx 20rpx  20rpx;
}
.range{
	display: inline-block;
	vertical-align: middle;
	margin-left: 15rpx;
}
.range>.iconfont{
	font-size: 24rpx;
	display: block;
	-webkit-transform: scale(2);
	        transform: scale(2);
}
.range>text.active{
	color: #000000;
}
.buy image{
	width: 60rpx;
	height: 60rpx;
	padding: 10rpx;
}
.word-bottom>view{
	display: inline-block;
	vertical-align:-webkit-baseline-middle;
}

