
.top-nav{
	z-index: 999;
	background-color: #fff;
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	box-sizing: border-box;
	padding: 20rpx 0 20rpx 40rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	/* justify-content: space-around; */
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.nav-bar{
	position: absolute;
	left: 70px;
	right: 70px;
	top: 0;
	padding: 20rpx 0;
	text-align: center;
}
.nav{
	color: #afafaf;
	display: inline-block;
	width: 50%;
	box-sizing: border-box;
}
.nav.active text{
	color: #000000;
	position: relative;
}
.nav.active text::before{
	content: '';
	position: absolute;
	bottom: -10rpx;
	width: 50rpx;
	background-color: #ff7379;
	height: 2px;
	left: 50%;
	margin-left: -25rpx;
}
.content{
	background-color: #f7f7f7;
	position: absolute;
	padding-top: 20rpx;
	top: 72rpx;
	left: 0;
	right: 0;
	bottom: 0;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.left-scroll{
	width: 220rpx;
	text-align: center;
	display: inline-block;
}
.left-item{
	margin: 25rpx 0;
	padding: 20rpx 0;
}
.left-item.active{
	background-color: #fff;
}
.left-item.active text{
	display: inline-block;
	width: 100%;
	border-left: 2px solid #ff6d7e;
}
.right-scroll{
	padding: 25rpx 30rpx;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	background-color: white;
}
.right-scroll .banner{
	width: 100%;
	height: 240rpx;
}
.right-scroll .headline{
	margin: 25rpx 0;
}
.right-item{
	display: inline-block;
	vertical-align: top;
	text-align: center;
	width: 33%;
	margin: 20rpx 0;
}
.right-item image{
	width: 100rpx;
	height: 100rpx;
	margin-bottom: 30rpx;
}
.right-content{
	text-align: justify;
}

