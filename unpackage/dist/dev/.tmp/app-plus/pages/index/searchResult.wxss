
.top-nav{
	z-index: 999;
	background-color: #fff;
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	box-sizing: border-box;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.search-line{
	/* height: 120upx; */
	background-color: #f4f4f4;
	border-radius: 120rpx;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	margin: 0 40rpx;
	padding: 8rpx 15rpx;
}
.search-line icon{
	display: inline-block;
		vertical-align: middle;
}
.search-line input{
	display: inline-block;
	width: 70%;
	height: 100%;
	vertical-align: middle;
	margin-left: 10rpx;
}
.main{
	padding-top: 96rpx;
}
.nav-bar{
	padding: 25rpx 0;
	text-align: center;
}
.nav{
	color: #afafaf;
	display: inline-block;
	width: 25%;
	box-sizing: border-box;
}
.nav.active>text{
	color: #000000;
	position: relative;
}
.nav.active>text::before{
	content: '';
	position: absolute;
	bottom: -10rpx;
	width: 50rpx;
	background-color: #ff7379;
	height: 2px;
	left: 50%;
	margin-left: -25rpx;
}
.range{
	display: inline-block;
	vertical-align: middle;
	margin-left: 15rpx;
}
.range>.iconfont{
	font-size: 24rpx;
	display: block;
	-webkit-transform: scale(2);
	        transform: scale(2);
}
.range>text.active{
	color: #000000;
}
.list{
	margin-bottom: 20rpx;
}
.list>image,
.list .info
{
	display: inline-block;
	vertical-align: top;
}
.list>image{
	width: 280rpx;
	height: 280rpx;
	border-radius: 10px;
	margin-right: 20rpx;
}
.list .title{
	line-height: 1.5;
	width: 360rpx;
	height: 72rpx;
	overflow:hidden;/*一定要写 */
	    text-overflow: ellipsis;/*超出省略号 */
	    display:-webkit-box;/*一定要写 */
	    -webkit-line-clamp: 2;/*控制行数 */
	    -webkit-box-orient: vertical;/*一定要写 */
}
.list .bottom-content{
	margin: 80rpx 0 30rpx;
}
.buy{
	text-align: right;
}
.buy icon{
	border: 1px solid #ff6d7e;
	border-radius: 50%;
	padding: 10rpx;
}
.hint{
	margin: 20rpx 0;
	font-size: 28rpx;
	text-align: center;
}
.comment image{
	width: 45rpx;
	height: 40rpx;
	display: inline-block;
	vertical-align: middle;
}
.range image{
	width: 15rpx;
	height: 10rpx;
}
.buy image{
	width: 60rpx;
	height: 60rpx;
	padding: 10rpx;
}

