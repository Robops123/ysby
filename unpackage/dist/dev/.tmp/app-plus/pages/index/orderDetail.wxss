
page{
	background-color: #f3f3f3;
}
.top{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding: 30rpx 30rpx 40rpx;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	background: #ff757b;
	color: white;
}
.top image{
	width: 90rpx;
	height: 90rpx;
}
.process{
	font-size: 34rpx;
	line-height: 40rpx;
}
.intro{
	font-size: 26rpx;
}
.margin{
	margin: 20rpx 0;
}
.bgwhite{
	background-color: #fff;
}
.about>.iconfont{
	margin-right: 30rpx;
}
.about>view{
	display: inline-block;
	vertical-align: middle;
}
.child-overall-item,
.overall{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	justify-items: center;
}
.child-overall-item>image{
	width: 150rpx;
	height: 150rpx;
	margin-right: 20rpx;
}
.child-overall-item .title{
	margin-top: 10rpx;
	width: 360rpx;
	height: 64rpx;
	overflow:hidden;/*一定要写 */
	    text-overflow: ellipsis;/*超出省略号 */
	    display:-webkit-box;/*一定要写 */
	    -webkit-line-clamp: 2;/*控制行数 */
	    -webkit-box-orient: vertical;/*一定要写 */
}
.info{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.options{
	margin: 25rpx 0 0;
}
.pre{
	margin-right: 20rpx;
}
.btn-box{
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	padding: 20rpx 30rpx 20rpx 0;
	text-align: right;
	box-sizing: border-box;
}
.btn{
	width: 220rpx;
	height: 70rpx;
	line-height: 70rpx;
	text-align: center;
	border: 1px solid #e0e0e0 !important;
	font-size: 30rpx;
	display: inline-block;
	margin-left: 40rpx;
	border-radius: 70rpx;
	background-color: #fff !important;
}

